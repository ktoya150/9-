using System;
using System.Collections.Generic;

namespace SingletonDemo
{
   
    public class Logger
    {
        private static Logger instance;
        private List<string> log = new List<string>();

        
        private Logger() { }

        
        public static Logger Instance => instance ??= new Logger();

       
        public void AddLog(string message)
        {
            log.Add($"{DateTime.Now:HH:mm:ss} ‚Äî {message}");
        }

        
        public IEnumerable<string> GetLog() => log;
    }

    
    public class Settings
    {
        private static Settings instance;
        private Dictionary<string, string> parameters = new Dictionary<string, string>();

        private Settings() { }

        public static Settings Instance => instance ??= new Settings();

        public void Set(string key, string value)
        {
            parameters[key] = value;
        }

        public string Get(string key)
        {
            return parameters.TryGetValue(key, out var value) ? value : "–ù–µ –≤—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–æ";
        }
    }

    
    class Program
    {
        static void Main(string[] args)
        {
            
            Logger.Instance.AddLog("–ü—Ä–æ–≥—Ä–∞–º–∞ –∑–∞–ø—É—â–µ–Ω–∞");
            Logger.Instance.AddLog("–ö–æ—Ä–∏—Å—Ç—É–≤–∞—á —É–≤—ñ–π—à–æ–≤ –≤ —Å–∏—Å—Ç–µ–º—É");

            Console.WriteLine("üìù –ñ—É—Ä–Ω–∞–ª –ø–æ–¥—ñ–π:");
            foreach (var entry in Logger.Instance.GetLog())
            {
                Console.WriteLine(entry);
            }

            Console.WriteLine();

            
            Settings.Instance.Set("Language", "uk-UA");
            Settings.Instance.Set("Theme", "Dark");
            Settings.Instance.Set("WindowSize", "1280x720");

            Console.WriteLine("‚öôÔ∏è –ù–∞–ª–∞—à—Ç—É–≤–∞–Ω–Ω—è:");
            Console.WriteLine("–ú–æ–≤–∞: " + Settings.Instance.Get("Language"));
            Console.WriteLine("–¢–µ–º–∞: " + Settings.Instance.Get("Theme"));
            Console.WriteLine("–†–æ–∑–º—ñ—Ä –≤—ñ–∫–Ω–∞: " + Settings.Instance.Get("WindowSize"));
            Console.WriteLine("–ó–≤—É–∫–∏: " + Settings.Instance.Get("Sounds")); // –Ω–µ –≤—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–æ
        }
    }
}
